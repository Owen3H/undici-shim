{
    "compilerOptions": {
        "module": "UMD",
        "target": "ES5",
        "lib": ["DOM", "ES2016"],
        "moduleResolution": "node",
        "outDir": "dist",
        "skipDefaultLibCheck": true,
        "esModuleInterop": true,
        "importHelpers": false,
        "noEmitOnError": true,
        "declaration": false,
        "noImplicitAny": true,
        "typeRoots": ["node_modules/@types"]
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}