{
    "compilerOptions": {
        "module": "ES2022",
        "target": "ES5",
        "moduleResolution": "node",
        "outDir": "dist/esm",
        "skipDefaultLibCheck": true,
        "esModuleInterop": true,
        "importHelpers": true,
        "noEmitOnError": true,
        "declaration": true,
        "noImplicitAny": true,
        "removeComments": true,
        "typeRoots": ["node_modules/@types"],
        "sourceMap": true
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}