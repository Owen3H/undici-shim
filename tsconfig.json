{
    "compilerOptions": {
        "module": "ES2022",
        "target": "ES6",
        "moduleResolution": "node",
        "outDir": "dist/esm",
        "skipDefaultLibCheck": true,
        "esModuleInterop": true,
        "importHelpers": true,
        "noEmitOnError": true,
        "declaration": true,
        "emitDeclarationOnly": true,
        "noImplicitAny": true,
        "removeComments": true,
        "typeRoots": ["node_modules/@types"]
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}